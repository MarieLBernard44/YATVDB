{% extends '::base.html.twig' %}

{% block body %}

<div class="container showSeason">

	<h1> {{serie.name}} - Saison n°{{ season.seasonNumber }} </h1>

	<div class="row">

		<div class="col-lg-8">
			<span class="detailSaison libelle"> Nom:  </span> <span> {{season.name}} </span> <br> <br>
			<span class="detailSaison libelle"> Date de sortie: </span> <span> {{season.diffusionDate | date('d/m/Y')}} </span> <br> <br>
	        <span class="detailSaison libelle"> Nombres d'épisodes: </span> <span> {{season.episodes|length}} </span><br><br>
	        <p class="detailSaison libelle"> Résumé: </p>  <p>{{season.resume}} </p>
		</div>

		<div class="col-lg-4">

			{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
			<a class="btn-updateSeason btn pull-right" href="{{path('serie_editSeason', {'serieName' : serie.name, 'seasonNumber' : season.seasonNumber})}}">
				<i class="glyphicon glyphicon-scissors"></i> Modifier la saison
			</a>

			<a class="btn-addEpisode btn pull-right" href="{{path('serie_addEpisode', {'serieName' : serie.name, 'seasonNumber' : season.seasonNumber})}}">
		        <i class="glyphicon glyphicon-plus-sign"></i> Ajouter un épisode
		    </a> <br>

		    {% if is_granted('ROLE_AUTEUR') %}
		    <a class="btn-deleteSeason btn pull-right" href="{{path('season_delete', {'seasonId' : season.id})}}">
				<i class="glyphicon glyphicon-trash"> </i> Supprimer la saison
			</a>
			{% endif %}
			{% endif %}
		</div>

    </div>
		
{%for episode in season.episodes%}
    <div class="row">

        

	        <div class="col-lg-2">
	        	<img src="{{asset(episode.image.url|default('img/iconPaysage.png'))}}" alt="{{episode.image.alt|default('')}}" class="thumbnail" style="width:100%""></a>
	        </div>

	        <div class="col-lg-7">
		        <span class="strong">Nom de l'épisode : </span> <span> {{episode.name}} - Episode n°{{episode.episodeNumber}} </span> <br>
		        <span class="strong">Date de diffusion : </span> <span>{{ episode.diffusionDate | date('d/m/Y') }}</span> <br>
		        <span class="strong">Résumé : </span> <br> <span>{{episode.resume}}</span> 
		    </div>

		    <div class="col-lg-3 text-right">
		    	{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
		        <a class="btn-updateEpisode btn" href="{{path('serie_editEpisode', {'serieName' : episode.serie.name, 'seasonNumber' : episode.season.seasonNumber, 'episodeNumber' : episode.episodeNumber})}}">

                   	<i class="glyphicon glyphicon-scissors"></i> modifier
               	</a> 

               	{% if is_granted('ROLE_AUTEUR') %}
               	<a class="btn-deleteEpisode btn pull-right" href="{{path('episode_delete', {'episodeId' : episode.id})}}">
				<i class="glyphicon glyphicon-trash"> </i> Supprimer
				</a>
				{% endif %}
				{% endif %}
            </div>
    	
        
    </div>
	       
{%endfor%}
	       
 <div class="row">
        <a class="btn retour" href="{{ path('serie_showCategories')}}">
            <i class="glyphicon glyphicon-chevron-left"></i> Retour
        </a>
    </div>

    </div>


{% endblock %}