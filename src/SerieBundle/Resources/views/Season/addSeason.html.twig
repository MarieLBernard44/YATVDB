{% extends '::base.html.twig' %}

{% block body %}

<div class="container addSeason">

	<form method="POST" {{ form_enctype (form) }} >

	<h2>Ajout Saison à la série {{serie.name}}</h2>
	<p> Complète ce formulaire et notre équipe se chargera de valider la publication de la saison! </p>


	<div class="form-group">
		{{ form_label(form.name, "Titre de la saison: ") }}
        {{ form_errors(form.name) }}
        {{ form_widget(form.name, {'attr':{'class':'form-control'}}) }}
    </div>

    <div class="form-group">
		{{ form_label(form.seasonNumber, "N° de saison: ") }}
        {{ form_errors(form.seasonNumber) }}
        {{ form_widget(form.seasonNumber, {'attr':{'class':'form-control'}}) }}
    </div>


    <div class="form-group">
        {{ form_label(form.resume, "Synopsis et détails: ") }}
        {{ form_errors(form.resume) }}
        {{ form_widget(form.resume, {'attr':{'class':'form-control'}}) }}
     
    </div>

	<div class="form-group">
        {{ form_label(form.diffusionDate, "Date de diffusion: ") }}
        {{ form_errors(form.diffusionDate) }}
        {{ form_widget(form.diffusionDate) }}
    </div>

		{{form_rest(form)}}
	
	<div class="row">
		<div class="col-lg-2 pull-right">
			 <a href="{{ path('serie_detail', {'name':serie.name}) }}" class="btn btn-lg btn-danger pull-right">Annuler</a>
		</div>
		<div class="col-lg-1 pull-right">
			<input type="submit" value="Ajouter" class="btn btn-lg btn-primary"/>
		</div>

	</div>

 </form>
 </div>

{% endblock %}